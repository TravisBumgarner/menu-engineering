{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/electron",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["./tsconfig.json", "./tsconfig.renderer.json"]
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "import/ignore": ["node_modules/@vitejs/plugin-react"]
  },
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["^@vitejs/"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/renderer/**/*.{ts,tsx}"],
      "parserOptions": {
        "project": "./tsconfig.renderer.eslint.json"
      }
    },
    {
      "files": [
        "src/main/**/*.{ts,tsx}",
        "src/preload/**/*.{ts,tsx}",
        "forge.config.ts"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
